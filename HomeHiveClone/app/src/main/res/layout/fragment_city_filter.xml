<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/fragment_top_bar_margin_horizontal"
    android:layout_marginVertical="@dimen/fragment_top_bar_margin_vertical"
    android:orientation="vertical"
    tools:context=".filter_fragments.CityFilterFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/work_sans_medium"
        android:text="Enter your city"
        android:textColor="@color/fragment_top_bar_text"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="@dimen/fragment_top_bar_margin_vertical"
        android:background="@drawable/listing_edit_text_bg"
        android:orientation="horizontal"
        android:gravity="center">

        <AutoCompleteTextView
            android:id="@+id/cityNameEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/work_sans"
            android:hint="Start typing you city name"
            android:inputType="text"
            android:maxLength="20"
            android:padding="@dimen/edit_text_padding"
            android:textColor="@color/fragment_top_bar_text"
            android:textColorHint="@color/edit_text_hint"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/material_symbols_search_rounded_filter"
            android:padding="12dp"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/vertical_divider"
            android:layout_marginVertical="8dp" />

        <ImageView
            android:id="@+id/voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_keyboard_voice_filter"
            android:padding="12dp"/>
    </LinearLayout>

</LinearLayout>