<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/fragment_top_bar_margin_horizontal"
    android:layout_marginVertical="@dimen/fragment_top_bar_margin_vertical"
    tools:context=".filter_fragments.FlatFilterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/work_sans_medium"
            android:text="Enter your locality"
            android:textColor="@color/fragment_top_bar_text"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fragment_top_bar_margin_vertical"
            android:background="@drawable/listing_edit_text_bg"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/localityEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/work_sans"
                android:hint="Start typing you locality name"
                android:inputType="text"
                android:padding="@dimen/edit_text_padding"
                android:textColor="@color/fragment_top_bar_text"
                android:textColorHint="@color/edit_text_hint"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/localityDropDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="12dp"
                android:src="@drawable/material_symbols_chevron_right_rounded__1_" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/work_sans_medium"
            android:text="Property Type"
            android:textColor="@color/fragment_top_bar_text"
            android:textSize="16sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fragment_top_bar_margin_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/independentHouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Independent house"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:tag="false"/>

                <TextView
                    android:id="@+id/apartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Apartment"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:tag="false"/>

                <TextView
                    android:id="@+id/independentFloor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Independent floor"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:tag="false"/>
                <TextView
                    android:id="@+id/villa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Villa"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp"
                    android:tag="false"/>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/work_sans_medium"
            android:text="Room Sharing"
            android:textColor="@color/fragment_top_bar_text"
            android:textSize="16sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fragment_top_bar_margin_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/privateRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Private Room"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:tag="false"/>

                <TextView
                    android:id="@+id/doubleSharing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Double Sharing"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:tag="false"/>

                <TextView
                    android:id="@+id/tripleSharing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Triple Sharing"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:tag="false"/>
                <TextView
                    android:id="@+id/moreSharing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="3+ Sharing"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp"
                    android:tag="false"/>
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/work_sans_medium"
            android:text="BHK type"
            android:textColor="@color/fragment_top_bar_text"
            android:textSize="16sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fragment_top_bar_margin_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rk1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="1 RK"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:tag="false"/>

                <TextView
                    android:id="@+id/bhk1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="1 BHK"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:tag="false"/>

                <TextView
                    android:id="@+id/bhk2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="2 BHK"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:tag="false"/>
                <TextView
                    android:id="@+id/bhk3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="3 BHK"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:tag="false"/>
                <TextView
                    android:id="@+id/bhk3More"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="3 BHK +"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:tag="false"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</ScrollView>