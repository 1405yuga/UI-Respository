<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/fragment_top_bar_margin_horizontal"
    android:layout_marginVertical="@dimen/fragment_top_bar_margin_vertical"
    tools:context=".filter_fragments.FlatFilterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/work_sans_medium"
            android:text="Gender"
            android:textColor="@color/fragment_top_bar_text"
            android:textSize="16sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fragment_top_bar_margin_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/onlyBoys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Only Boys"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/onlyGirls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Only Girls"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/anyGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Any"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</ScrollView>