<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/fragment_top_bar_margin_horizontal"
    android:layout_marginVertical="@dimen/fragment_top_bar_margin_vertical"
    tools:context=".filter_fragments.FlatFilterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/work_sans_medium"
            android:text="Gender"
            android:textColor="@color/fragment_top_bar_text"
            android:textSize="16sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fragment_top_bar_margin_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/onlyBoys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Only Boys"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/onlyGirls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Only Girls"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/anyGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Any"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/work_sans_medium"
            android:text="Tenant Profession"
            android:textColor="@color/fragment_top_bar_text"
            android:textSize="16sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fragment_top_bar_margin_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Student"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/workingProfessional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Working professional"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/anyProfession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Anyone"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/work_sans_medium"
            android:text="Tenant Age"
            android:textColor="@color/fragment_top_bar_text"
            android:textSize="16sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fragment_top_bar_margin_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/below18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Below 18"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/age18to24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="18 to 24"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/age25to30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="25 to 30"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/age30more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="30+"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/work_sans_medium"
            android:text="No Preference"
            android:textColor="@color/fragment_top_bar_text"
            android:textSize="16sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fragment_top_bar_margin_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/drinking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Drinking"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/non_vegetarian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Non-vegetarian"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/smoking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Smoking"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/nightShift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Night shift"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/dayShift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Day shift"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/work_sans_medium"
            android:text="Count of Tenant"
            android:textColor="@color/fragment_top_bar_text"
            android:textSize="16sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fragment_top_bar_margin_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/only1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Only 1"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/below2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Below 2"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/below3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Below 3"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/above4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/unselected_filter"
                    android:clickable="true"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:tag="false"
                    android:text="Above 4"
                    android:textColor="@color/contaced_text"
                    android:textSize="14sp" />

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</ScrollView>