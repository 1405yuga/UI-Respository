<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/on_boarding_horizontal_margin"
    android:layout_marginVertical="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/skipButton"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/clickable_size_min"
            android:layout_height="@dimen/clickable_size_min"
            android:layout_gravity="end"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:gravity="end|center_vertical"
            android:text="@string/skip"
            android:textSize="16sp"
            android:focusable="true" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            app:cardBackgroundColor="@color/image_bg_on_boarding"
            app:cardCornerRadius="48dp"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/onBoarding_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/illustration_01" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/onBoarding_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Numerous free\ntrial courses"
            android:textAlignment="center"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/onBoarding_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins_light"
            android:text="Free courses for you to\n find your way to learning"
            android:textAlignment="center"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/nextBar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/clickable_size_min"
            android:clickable="true"
            android:contentDescription="nextButton"
            android:layout_marginBottom="80dp"
            android:src="@drawable/pavigation1"
            android:focusable="true" />

        <LinearLayout
            android:id="@+id/SignUpOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/signUpButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:clickable="true"
                app:cardBackgroundColor="@color/sign_up_button_bg"
                app:cardCornerRadius="12dp"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="12dp"
                    android:text="@string/sign_up"
                    android:textColor="@color/sign_up_button_text"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/loginButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                app:cardBackgroundColor="@color/login_button_bg"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="12dp"
                    android:text="@string/log_in"
                    android:textColor="@color/login_button_text"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>